<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#EE111111"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_today_popup_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/menuMargin"
        android:layout_marginRight="@dimen/menuMargin"
        android:src="@drawable/ic_popup_menu_today" />

    <ImageView
        android:id="@+id/iv_pre_popup_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/menuMargin"
        android:layout_marginRight="@dimen/menuMargin"
        android:layout_toLeftOf="@+id/iv_today_popup_menu"
        android:src="@drawable/ic_popup_menu_pre" />


    <ImageView
        android:id="@+id/iv_like_popup_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/menuMargin"
        android:layout_marginRight="@dimen/menuMargin"
        android:layout_toLeftOf="@+id/iv_pre_popup_menu"
        android:src="@drawable/ic_popup_menu_like_nor" />


    <ImageView
        android:id="@+id/iv_next_popup_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/menuMargin"
        android:layout_marginRight="@dimen/menuMargin"
        android:layout_toRightOf="@+id/iv_today_popup_menu"
        android:src="@drawable/ic_popup_menu_next" />

    <ImageView
        android:id="@+id/iv_collect_popup_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/menuMargin"
        android:layout_marginRight="@dimen/menuMargin"
        android:layout_toRightOf="@+id/iv_next_popup_menu"
        android:src="@drawable/ic_popup_menu_collect" />

    <ImageView
        android:id="@+id/iv_about_popup_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/menuMargin"
        android:src="@drawable/ic_popup_menu_about" />

</RelativeLayout>
